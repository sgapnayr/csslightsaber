ginal":{"line":230,"column":25},"generated":{"line":228,"column":25}},{"source":"style.css","name":null,"original":{"line":231,"column":2},"generated":{"line":229,"column":2}},{"source":"style.css","name":null,"original":{"line":231,"column":17},"generated":{"line":229,"column":17}},{"source":"style.css","name":null,"original":{"line":232,"column":2},"generated":{"line":230,"column":2}},{"source":"style.css","name":null,"original":{"line":232,"column":12},"generated":{"line":230,"column":12}},{"source":"style.css","name":null,"original":{"line":233,"column":2},"generated":{"line":231,"column":2}},{"source":"style.css","name":null,"original":{"line":233,"column":15},"generated":{"line":231,"column":15}},{"source":"style.css","name":null,"original":{"line":234,"column":2},"generated":{"line":232,"column":2}},{"source":"style.css","name":null,"original":{"line":234,"column":19},"generated":{"line":232,"column":19}},{"source":"style.css","name":null,"original":{"line":235,"column":0},"generated":{"line":233,"column":0}}],"sources":{"style.css":"@import \"./normalize.css\";\n\n:root {\n  --blade-hue: 120;\n  --blade-lightness: 50%;\n}\n\n*,\n*::before,\n*::after {\n  box-sizing: border-box;\n}\n\nbody {\n  background: #222;\n  display: grid;\n  grid-template-columns: repeat(6, 1fr);\n  grid-template-rows: 100px 50px 1fr;\n  min-height: 100vh;\n  place-items: center;\n  font-family: -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, Oxygen,\n    Ubuntu, Cantarell, \"Open Sans\", \"Helvetica Neue\", sans-serif;\n  text-transform: uppercase;\n  font-size: 0.7rem;\n}\n\n.toggle-box {\n  width: 100%;\n  height: 100vh;\n  background: red;\n  position: relative;\n}\n\n[name=\"color\"] {\n  grid-row: 1 /2;\n  display: flex;\n  flex-basis: 43%;\n}\n\n.green {\n  margin-right: -3rem;\n}\n\nlabel {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  text-align: center;\n}\n\nlabel:not(.hilt) {\n  color: white;\n  font-weight: bold;\n  align-self: start;\n}\n\n.btn {\n  width: 2rem;\n  height: 2rem;\n  border-radius: 10px;\n  transition: 0.3s;\n  display: flex;\n  opacity: 0.2;\n  margin-bottom: -0.2rem;\n}\n\n.btn:checked {\n  opacity: 1;\n  transform: scale(1.4);\n}\n\n/* Lightsaber */\n\n.lightsaber {\n  margin-top: 35vh;\n  grid-column: 1 / -1;\n  position: relative;\n}\n\n#on-off {\n  position: absolute;\n  width: 0;\n  height: 0;\n}\n\n.hilt {\n  display: block;\n  width: 0.75rem;\n  height: 7rem;\n  background: red;\n  border-radius: 0 0 4px 4px;\n  background-image: linear-gradient(\n    silver 0 10px,\n    hsl(39 75% 50%) 0 14px,\n    silver 0 15px,\n    black 0 20px,\n    silver 0 22px,\n    black 0 25px,\n    silver 0 27px,\n    black 0 30px,\n    silver 0 32px,\n    black 0 35px,\n    silver 0 37px,\n    black 0 40px,\n    silver 0 42px,\n    black 0 45px,\n    silver 0 47px,\n    black 0 50px,\n    silver 0 60px,\n    hsl(39 75% 50%) 60px 80px,\n    silver 0 100%\n  );\n}\n\n.blade {\n  position: absolute;\n  background: white;\n  height: 300%;\n  width: 100%;\n  bottom: 100%;\n  border-radius: 100vw 100vw 0 0;\n  box-shadow: inset 0 0 4px\n      hsl(var(--blade-hue) 100% var(--blade-lightness) / 1),\n    0 0 1em hsl(var(--blade-hue) 100% var(--blade-lightness) / 1),\n    0 0 1.5em hsl(var(--blade-hue) 100% var(--blade-lightness) / 0.9),\n    0 0 2em hsl(var(--blade-hue) 100% var(--blade-lightness) / 0.8),\n    0 0 3em hsl(var(--blade-hue) 100% var(--blade-lightness) / 0.7),\n    0 0 5em hsl(var(--blade-hue) 100% var(--blade-lightness) / 0.6),\n    0 0 10em hsl(var(--blade-hue) 100% var(--blade-lightness) / 0.5);\n  transition: all 0.08s ease-in-out;\n  transform-origin: bottom;\n}\n\n.blade::after {\n  content: \"\";\n  position: absolute;\n  top: 0;\n  left: 0;\n  right: 0;\n  bottom: 0;\n  background: hsl(var(--blade-hue) 100% var(--blade-lightness));\n  box-shadow: 0 0 10em hsl(var(--blade-hue) 100% 50% / 1);\n  border-radius: inherit;\n  filter: blur(0.5em);\n  opacity: 1;\n  animation: pulse linear 3s infinite;\n}\n\n.blade::before {\n  content: \"\";\n  position: absolute;\n  top: 0;\n  bottom: 0;\n  right: 0;\n  left: 0;\n  background: white;\n  border-radius: inherit;\n  z-index: 10;\n}\n\n@keyframes pulse {\n  50% {\n    opacity: 0.1;\n  }\n}\n\n/* Toggle Lightsaber */\n#on-off:not(:checked) + .blade {\n  transform: scaleY(0);\n}\n\n#on-off:checked + .blade {\n  transform: scaley(1);\n}\n\n#on-off:checked + .lightsaber {\n  transform: scale(2);\n}\n\n/* Color Change */\ninput[id=\"red\"]:checked ~ .lightsaber {\n  --blade-hue: 360;\n}\n\ninput[id=\"green\"]:checked ~ .lightsaber {\n  --blade-hue: 120;\n}\n\ninput[id=\"blue\"]:checked ~ .lightsaber {\n  --blade-hue: 195;\n}\n\ninput[id=\"yellow\"]:checked ~ .lightsaber {\n  --blade-hue: 60;\n}\n\ninput[id=\"purple\"]:checked ~ .lightsaber {\n  --blade-hue: 290;\n}\n\ninput[id=\"darksaber\"]:checked ~ .lightsaber {\n  --blade-lightness: 100%;\n}\n\ninput[id=\"darksaber\"]:checked ~ .lightsaber .blade::before {\n  background: black;\n}\n\n/* Embed */\n\nembed {\n  display: none;\n  position: absolute;\n  opacity: 0;\n  pointer-events: 0;\n  width: 0;\n  height: 0;\n}\n\n#on-off:checked ~ embed {\n  display: block;\n}\n\n/* Instructions */\n.instructions {\n  color: white;\n  padding: 1rem;\n  display: flex;\n  justify-content: start;\n  align-items: flex-start;\n  flex-basis: 30%;\n  width: 25%;\n  height: 100vh;\n  margin-top: -8rem;\n}\n"},"lineCount":null}},"error":null,"hash":"ed6da091f85bfa2a5f128f3db265ed74","cacheData":{"env":{}}}